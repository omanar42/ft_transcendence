// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  oauthId   String    @unique
  username  String    @unique
  fullname  String
  email     String    @unique
  avatar    String?
  provider  String
  hashedRt  String?
  twoFactor Boolean   @default(false)
  twoFaSec  String?
  status    String    @default("offline")
  level     Int       @default(0)
  wins      Int       @default(0)
  losses    Int       @default(0)
  friends   Friend[]
  // matches   Match[]   @relation("Matches")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Friend {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [oauthId])
  userId    String
  friendId  String
  status    FriendStatus
  actions   FriendActions[]
}

enum FriendStatus {
  FRIENDS
  PENDING
  BLOCKED
}

enum FriendActions {
  ADD
  REMOVE
  ACCEPT
  REJECT
  REVOKE
  BLOCK
}

model Match {
  id        Int       @id @default(autoincrement())
  result    String
  // players   User[]    @relation("Matches")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
